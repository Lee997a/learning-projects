<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.boardPrj.mapper.BoardLikeMapper">

    <!-- 좋아요 추가 - useGeneratedKeys 제거하고 단순화 -->
    <insert id="insert" parameterType="BoardLikeDTO">
        INSERT INTO board_like (board_id, user_ip)
        VALUES (#{boardId}, #{userIp})
    </insert>

    <!-- 좋아요 취소 -->
    <delete id="delete">
        DELETE FROM board_like
        WHERE board_id = #{boardId} AND user_ip = #{userIp}
    </delete>

    <!-- 좋아요 여부 확인 -->
    <select id="existsByBoardIdAndUserIp" resultType="int">
        SELECT COUNT(*)
        FROM board_like
        WHERE board_id = #{boardId} AND user_ip = #{userIp}
    </select>

    <!-- 게시글 좋아요 수 조회 -->
    <select id="countByBoardId" parameterType="Long" resultType="int">
        SELECT COUNT(*)
        FROM board_like
        WHERE board_id = #{boardId}
    </select>

</mapper>